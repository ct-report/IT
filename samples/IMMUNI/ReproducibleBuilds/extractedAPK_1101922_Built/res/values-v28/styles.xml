<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.AppCompat" parent="@style/Base.V28.Theme.AppCompat" />
    <style name="Base.Theme.AppCompat.Light" parent="@style/Base.V28.Theme.AppCompat.Light" />
    <style name="Base.V14.ThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimAmount">0.32</item>
        <item name="android:checkedTextViewStyle">@style/Widget.MaterialComponents.CheckedTextView</item>
        <item name="android:dialogCornerRadius">@null</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.MaterialComponents</item>
        <item name="buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.MaterialComponents.Body.Text</item>
    </style>
    <style name="CardShadowColorPrimary">
        <item name="android:elevation">@dimen/cards_elevation</item>
        <item name="android:outlineSpotShadowColor">@color/colorPrimary</item>
    </style>
    <style name="CardShadowRed">
        <item name="android:elevation">@dimen/cards_elevation</item>
        <item name="android:outlineSpotShadowColor">@color/danger</item>
    </style>
    <style name="CardShadowWhite">
        <item name="android:elevation">@dimen/cards_elevation</item>
        <item name="android:outlineSpotShadowColor">#1a5751ff</item>
    </style>
    <style name="FAQCards">
        <item name="android:outlineSpotShadowColor">#08000000</item>
        <item name="cardCornerRadius">20.0dip</item>
        <item name="cardElevation">@dimen/cards_elevation</item>
    </style>
    <style name="PrivacyCards">
        <item name="android:outlineSpotShadowColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">20.0dip</item>
        <item name="cardElevation">@dimen/cards_elevation</item>
    </style>
    <style name="RoundedButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/color_state_rounded_button_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150.0dip</item>
        <item name="android:minHeight">55.0dip</item>
        <item name="android:insetTop">0.0dip</item>
        <item name="android:insetBottom">0.0dip</item>
        <item name="android:paddingStart">24.0dip</item>
        <item name="android:paddingEnd">24.0dip</item>
        <item name="android:elevation">@dimen/cards_elevation</item>
        <item name="android:backgroundTint">@color/color_state_rounded_button</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:outlineSpotShadowColor">@color/colorPrimary</item>
        <item name="cornerRadius">27.0dip</item>
        <item name="fontFamily">@font/euclid_circular_bold</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="RoundedButton.GreyDark" parent="@style/RoundedButton">
        <item name="android:backgroundTint">@color/color_state_rounded_button_grey_dark</item>
        <item name="android:outlineSpotShadowColor">@color/grey_dark</item>
        <item name="iconTint">@color/text_light</item>
    </style>
    <style name="RoundedButtonDanger" parent="@style/RoundedButton">
        <item name="android:backgroundTint">@color/color_state_rounded_button_danger</item>
        <item name="android:outlineSpotShadowColor">@color/danger</item>
    </style>
    <style name="Base.V28.Theme.AppCompat" parent="@style/Base.V26.Theme.AppCompat">
        <item name="dialogCornerRadius">?android:dialogCornerRadius</item>
    </style>
    <style name="Base.V28.Theme.AppCompat.Light" parent="@style/Base.V26.Theme.AppCompat.Light">
        <item name="dialogCornerRadius">?android:dialogCornerRadius</item>
    </style>
</resources>
